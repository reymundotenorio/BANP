-# Preloader
.preloader.only-loader
  .spinner
    .bounce1
    .bounce2
    .bounce3
-# End Preloader

-# Fill height
.fill-height

= form_tag paypal_checkout_path, method: "post", id: "paypal-checkout", class: "hidden" do
  -# Loading cart productss
  .cart-products-list

  = hidden_field_tag "address", "", id: "paypal-address"
  = hidden_field_tag "code", params[:code] ? params[:code] : nil

  %button#btn-paypal.btn.btn-general.btn-paid{name: "paypal", type: "submit"}
    = t("views.cart.checkout_paypal")
    = image_tag "#{Rails.env.development? ? 'img/paypal.svg' : 'https://res.cloudinary.com/reymundotenorio/image/upload/v1563543087/BANP/paypal.svg'}", class: "hidden-xs hidden-md"

    = image_tag "#{Rails.env.development? ? 'img/paypal-vertical.svg' : 'https://res.cloudinary.com/reymundotenorio/image/upload/v1563543090/BANP/paypal-vertical.svg'}", class: "hidden-sm hidden-lg"
