-# Details
%section.details
  .container
    -# Title
    .row.title-container
      .col-xs-12.col-sm-6.col-md-8
        -# Heading
        %h1{class: "#{provider.state}"}
          %i.fas.fa-id-card
          = provider.name
        -# End Heading

      .col-xs-12.col-sm-6.col-md-4.text-right
        -# Export button
        .btn-container.inline
          = link_to (admin_provider_path(provider, format: "pdf", lang: I18n.locale)), target: "_blank", class: "btn btn-general" do
            %i.fas.fa-download
            %span= t("views.index.export")
        -# End Export button
    -# End Title

    -# Breadcrumb
    .row
      .col-xs-12.hidden-xs
        .breadcrumb-container
          %ol.breadcrumb
            %li
              = link_to (admin_root_path) do
                %i.fas.fa-tachometer-alt
                %span= t("header.navigation.dashboard")
            %li
              = link_to (admin_providers_path) do
                %i.fas.fa-list-alt
                %span= t("header.navigation.providers")
            %li.active
              %i.fas.fa-id-card
              = provider.name
    -# End Breadcrumb

    -# Information
    .row
      .col-xs-12.col-md-5.col-lg-4
        -# Material card
        %div{class: "material-card shadow-card #{provider.state}"}
          .row.no-margin
            .col-xs-12.no-padding
              .general-info
                -# Image
                .image-container
                  - if provider.image.attached?
                    = image_tag url_for(provider.image), class: "img-responsive"

                  - else
                    = image_tag url_for("https://res.cloudinary.com/reymundotenorio/image/upload/v1563544834/BANP/default.png"), class: "img-responsive"
                -# End Image

                .main-info
                  %p= t("views.show.created_at", time: time_ago_in_words(provider.created_at))
                  %p= t("views.show.updated_at", time: time_ago_in_words(provider.updated_at))

                .main-buttons
                  .col-xs-12.col-sm-4.col-md-6.button-container.no-padding
                    = link_to (admin_edit_provider_path(provider)), class: "btn btn-general" do
                      %i.fas.fa-edit
                      %span= t("views.show.edit")

                  .col-xs-12.col-sm-4.col-md-6.button-container.no-padding
                    = link_to (admin_history_provider_path(provider)), class: "btn btn-general" do
                      %i.fas.fa-history
                      %span= t("views.show.history")

                  .col-xs-12.col-sm-4.col-md-12.button-container.no-padding
                    - if provider.state
                      = link_to (admin_deactive_provider_path(provider)), method: "patch", class: "btn btn-general" do
                        %i.fas.fa-times
                        %span= t("views.show.disable")

                    - else
                      = link_to (admin_active_provider_path(provider)), method: "patch", class: "btn btn-general" do
                        %i.fas.fa-check
                        %span= t("views.show.enable")
        -# End Material card

      .col-xs-12.col-md-7.col-lg-8
        -# Material card
        %div{class: "material-card shadow-card #{provider.state}"}
          .row.no-margin
            .col-xs-12.no-padding
              %div{class: "detail-info #{provider.state}"}
                -# Set attributes
                - attributes = ["FEIN", "email" ,"phone", "address", "state"]

                - attributes.each do |attribute|
                  .info
                    %p.title
                      %b= t("activerecord.attributes.provider.#{attribute}")

                    - if attribute == "state"
                      %p= provider.state ? t("views.show.enabled") : t("views.show.disabled")

                    - else
                      %p= provider["#{attribute}"]
        -# End Material card
    -# End Information
-# End Details
